<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon"

                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="24dp"/>

        <TextView
                android:text="Sign Up"
                android:id="@+id/sign_in_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:textSize="25sp"

                android:layout_marginTop="24dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="24dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/icon"
                app:layout_constraintLeft_toRightOf="@+id/icon"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="24dp"/>

        <android.support.design.widget.TextInputLayout
                style="@style/TextAppearance.App.TextInputLayout"
                android:id="@+id/first_name_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="6dp"

                app:layout_constraintTop_toBottomOf="@+id/icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/last_name_input_layout"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="6dp">

            <EditText
                    android:hint="First name"
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:nextFocusForward="@+id/last_name"
                    android:imeOptions="actionNext"

                    android:inputType="textPersonName|textCapWords"
                    android:maxLines="1"

                    android:paddingBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                style="@style/TextAppearance.App.TextInputLayout"
                android:id="@+id/last_name_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="24dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="24dp"

                app:layout_constraintTop_toBottomOf="@+id/icon"
                app:layout_constraintLeft_toRightOf="@+id/first_name_input_layout"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="24dp">

            <EditText
                    android:hint="Last name"
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:inputType="textPersonName|textCapWords"
                    android:maxLines="1"

                    android:paddingBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                style="@style/TextAppearance.App.TextInputLayout"
                android:id="@+id/email_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"

                app:layout_constraintTop_toBottomOf="@+id/last_name_input_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

            <EditText
                    android:hint="Email address"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:inputType="textEmailAddress"
                    android:maxLines="1"

                    android:paddingBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                style="@style/TextAppearance.App.TextInputLayout"
                android:id="@+id/password_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:passwordToggleEnabled="true"

                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"

                app:layout_constraintTop_toBottomOf="@+id/email_input_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

            <EditText
                    android:hint="Password"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:inputType="textPassword"
                    android:maxLines="1"

                    android:paddingBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                style="@style/TextAppearance.App.TextInputLayout"
                android:id="@+id/password_repeat_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:passwordToggleEnabled="true"

                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"

                app:layout_constraintTop_toBottomOf="@+id/password_input_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

            <EditText
                    android:hint="Retype password"
                    android:id="@+id/password_retype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:inputType="textPassword"
                    android:maxLines="1"

                    android:paddingBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
                android:text="This is legal notice for the most awesome social network ever imagined. Please, proceed with caution."
                android:id="@+id/checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:textColor="@color/colorTextDark"

                android:layout_margin="24dp"

                app:layout_constraintTop_toBottomOf="@+id/password_repeat_input_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        <Button
                android:text="Sign Up"
                android:id="@+id/sign_up"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/button_background_1"

                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"

                app:layout_constraintTop_toBottomOf="@+id/checkbox"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        <Button
                android:text="Back"
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/button_background_0"
                android:onClick="onBackClick"

                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"

                app:layout_constraintTop_toBottomOf="@+id/sign_up"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

    </android.support.constraint.ConstraintLayout>

</ScrollView>