<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextDark</item>
        <item name="android:listDivider">@color/colorPrimaryDark</item>
    </style>

    <!-- Base application theme without ActionBar. -->
    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Text appearance for TextInputLayout. -->
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="counterTextAppearance">@style/TextAppearance.App.TextInputLayout.Counter</item>
        <item name="errorTextAppearance">@style/TextAppearance.App.TextInputLayout.Error</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.App.TextInputLayout.Error</item>
        <item name="passwordToggleTint">@color/colorTextDark</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout.Error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout.Counter" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/textInputLayoutCounterSize</item>
    </style>

    <style name="EditText">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
